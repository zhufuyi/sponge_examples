# Need to package the code first `tar zcf coupon.tar.gz $(ls)` and move it to the same directory as Dokerfile
# rpc server source code, used to test rpc methods
FROM golang:1.21-alpine
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# go test dependency packages
RUN apk add bash alpine-sdk build-base gcc

COPY . /go/src/coupon
WORKDIR /go/src/coupon
RUN tar zxf coupon.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN rm -f coupon.tar.gz

CMD ["sleep","86400"]
